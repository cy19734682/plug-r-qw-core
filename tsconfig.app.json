{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./src/env.d.ts",
    "./src/auto-imports.d.ts",
    "./src/**/*",
    "./src/**/*.vue",
    "./src/**/*.ts",
    "./examples/**/*.json",
    "./examples/**/*",
  ],
  "exclude": [],
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "noEmit": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./examples/*"
      ]
    }
  }
}
